<Window x:Class="OrdersManagement1.Orders"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrdersManagement1"
        mc:Ignorable="d"
        Title="Orders" Height="485" Width="700" WindowStartupLocation="CenterScreen"  ResizeMode="NoResize">
    <Grid Margin="0,0,0,4">
        <DataGrid x:Name="OrdersDataGrid" HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="331" Loaded="OrdersDataGrid_Loaded"  SelectedCellsChanged="OrdersDataGrid_SelectedCellsChanged" />
        <DataGrid x:Name="DetailsDataGrid" HorizontalAlignment="Left" Height="399" Margin="364,10,0,0" VerticalAlignment="Top" Width="317"/>
        <Button x:Name="NewOrder" Content="New Order" HorizontalAlignment="Left" Margin="10,414,0,0" VerticalAlignment="Top" Width="148" Click="NewOrder_Click"/>
        <Button x:Name="ApplyOrder" Content="Apply Order" HorizontalAlignment="Left" Margin="175,414,0,0" VerticalAlignment="Top" Width="166" Click="ApplyOrder_Click"/>
    </Grid>
</Window>
