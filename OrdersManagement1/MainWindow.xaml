<Window x:Class="OrdersManagement1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrdersManagement1"
        mc:Ignorable="d"
        Title="MainWindow" Height="139" Width="250" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="0,0,13,12">
        <Button x:Name="CustomersButton" Content="View customers" HorizontalAlignment="Left" Margin="10,16,0,0" VerticalAlignment="Top" Width="210" Click="CustomersButton_Click"/>
        <Button x:Name="ProductsButton" Content="View products" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="210" Click="ProductsButton_Click"/>
        <Button x:Name="OrdersButton" Content="View orders" HorizontalAlignment="Left" Margin="10,66,0,0" VerticalAlignment="Top" Width="210" Click="OrdersButton_Click"/>
    </Grid>
</Window>
